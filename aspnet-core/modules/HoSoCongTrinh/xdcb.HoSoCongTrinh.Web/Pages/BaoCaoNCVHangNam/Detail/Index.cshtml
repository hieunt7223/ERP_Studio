@page
@using xdcb.HoSoCongTrinh.Constants
@model xdcb.BaoCaoNCVHangNam.DetailView.IndexModel

<script src="~/js/devextreme/dx.all.js"></script>
<script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
<script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>

@section scripts
{
    <script src="~/Pages/BaoCaoNCVHangNam/Detail/Detail.js"></script>

    <script>
        var chuDauTuId = '@Model.ChuDauTuId';
        var kehoachNhuCauVonId = '@Model.KeHoachNhuCauVonId';
        var loaiKeHoach = '@Model.LoaiKeHoach';
    </script>
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-8">
                <h4>@ViewTextConsts.BaoCaoNCVDetail.DetailTitle</h4>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="loadpanel"></div>
        <div class="card  card-search">
            <div class="card-header">
                <div class="row">
                    <div class="col-12">
                        <h3 class="card-title">Nhu cầu vốn Hằng Năm (Giai đoạn <span id="title_loaikehoach"> @(Model.LoaiKeHoach=="DIEU_CHINH"?"Điều chỉnh":"Đầu năm") </span> <span id="title_year">@Model.Year</span> )</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="search-item-container">
                        <div class="row">

                            <div class="col-12 col-md-6 col-lg-6">
                                <div class="form-group multiple-select-form">
                                    <label for="TrangThaiHoSo">@ViewTextConsts.BaoCaoNCVDetail.Nam : @Model.Year</label>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="LoaiKeHoach">@ViewTextConsts.BaoCaoNCVDetail.LoaiKeHoach : @(Model.LoaiKeHoach=="DIEU_CHINH"?"Điều chỉnh":"Đầu năm")</label>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                <span class="text-danger field-validation-valid" data-valmsg-replace="true">
                </span>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <ul class="nav nav-pills" role="tablist">
                    <li class="nav-item"><a class="nav-link   active" id="NST-tab" data-toggle="pill" href="#NST" role="tab" aria-selected="true">Nguồn ngân sách Tỉnh</a></li>
                    <li class="nav-item" id="tab_TW"><a class="nav-link " id="TW-tab" data-toggle="pill" href="#TW" role="tab" aria-controls="TW" aria-selected="false">Nguồn ngân sách Trung ương</a></li>
                    <li class="nav-item"><a class="nav-link  " data-toggle="pill" id="ODA-tab" href="#ODA" role="tab" aria-controls="ODA" aria-selected="false">Nguồn ODA</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade   show active" id="NST" role="tabpanel" aria-labelledby="NST-tab">

                        <div id="gridNST" class="baocao_ncv"></div>

                    </div>
                    <div class="tab-pane active" id="TW" role="tabpanel" aria-labelledby="TW-tab">
                        <div id="gridTW" class="baocao_ncv"></div>

                    </div>
                    <div class="tab-pane fade active" id="ODA" role="tabpanel" aria-labelledby="ODA-tab">
                        <div style="text-align:center">Chức năng đang được xử lý</div>
                        @*<div id="gridNSODA"  class="baocao_ncv"></div>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="text-right">
            <button type="button" id="Export" class="btn btn-info" data-busy-text="Đang xuất file..."><span>Xuất excel</span></button>
        </div>

    </div>

</section>

<div style="height:60px">
</div>

<div class="footer-action-group">

    <a href="~/BaoCaoNCVHangNam/List">
        <div class="btn btn-secondary">Đóng</div>
    </a>

</div>





