@using DevExtreme.AspNet.Mvc
@model xdcb.HoSoCongTrinh.Dtos.HoSoCongTrinhChiTietViewModel

<div class="row">
    <div class="col-12">
        <h6>Sự cần thiết đầu tư</h6>
        @(Html.DevExtreme().TextArea()
            .ID("suCanThietDauTu")
            .Height(90)
            .Value(Model.ThongTinChiTiet.SuCanThietDauTu)
            .Placeholder("Nhập trường này")
            .IsValid(true).MaxLength(500)
            .OnChange("GetValueSuCanThietDauTu")
        )
    </div>
</div>

<div class="row pt-2">
    <div class="col-12">
        <h6>Quy mô đầu tư</h6>
        @(Html.DevExtreme().TextArea()
            .ID("quyMoDauTu")
            .Height(90)
            .Value(Model.ThongTinChiTiet.QuyMoDauTu)
            .Placeholder("Nhập trường này")
            .IsValid(true).MaxLength(500)
            .OnChange("GetValueQuyMoDauTu")
        )
    </div>
</div>